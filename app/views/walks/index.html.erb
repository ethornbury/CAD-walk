<p style="color: green"><%= notice %></p>

<h1>Walks</h1>

<div id="walks">
  <% @walks.each do |walk| %>
    <%= render walk %>
	<% if current_user %>
    <p>
      <%= link_to "Show this walk", walk %>
    </p>
	<% end %>
  <% end %>
</div>

<% if current_user %>
  <%= link_to "New walk", new_walk_path %>
<% end %>
