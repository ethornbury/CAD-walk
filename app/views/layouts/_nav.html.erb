
<div class="w3-bar w3-border w3-black">
  
  <%= link_to "Home", root_path, class: "w3-mobile w3-bar-item w3-button w3-hover-none w3-text-grey w3-hover-text-white" %>
  <%= link_to "About", about_path, class: "w3-mobile w3-bar-item w3-button w3-hover-none w3-text-grey w3-hover-text-white" %>
  <%= link_to "Walks", walks_path, class: "w3-mobile w3-bar-item w3-button w3-hover-none w3-text-grey w3-hover-text-white" %>
  <%= link_to "Notes", notes_path, class: "w3-mobile w3-bar-item w3-button w3-hover-none w3-text-grey w3-hover-text-white" %>
  <% if !user_signed_in? %>
     <%= link_to "Sign in", new_user_session_path, class: "w3-mobile w3-bar-item w3-button w3-hover-none w3-text-grey w3-hover-text-white" %>
	 <%= link_to 'Register', new_user_registration_path, class: "w3-mobile w3-bar-item w3-button w3-hover-none w3-text-grey w3-hover-text-white" %>
	
  <% else %>
	 <span class="w3-mobile w3-bar-item w3-button w3-hover-none w3-text-grey w3-hover-text-white" > <%= current_user.email %> </span>
     <%= link_to "Sign out", destroy_user_session_path, 'data-turbo-method': :delete,  class: "w3-mobile w3-bar-item w3-button w3-hover-none w3-text-grey w3-hover-text-white" %>
	
  <% end %>
  <% if current_user.try(:admin?) %> <!-- only visible to admin user --> 
	 <span class="w3-mobile w3-bar-item w3-button w3-hover-none w3-text-teal w3-hover-text-white" > Admin</span>
  <% end %>
  
</div>