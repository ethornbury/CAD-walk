
<div class="w3-bar w3-border w3-black">
  
  <%= link_to "Home", root_path, class: "w3-mobile w3-bar-item w3-button w3-hover-none w3-text-grey w3-hover-text-white" %>
  <%= link_to "About", about_path, class: "w3-mobile w3-bar-item w3-button w3-hover-none w3-text-grey w3-hover-text-white" %>
  <%= link_to "Walks", walks_path, class: "w3-mobile w3-bar-item w3-button w3-hover-none w3-text-grey w3-hover-text-white" %>
  <%= link_to "Notes", notes_path, class: "w3-mobile w3-bar-item w3-button w3-hover-none w3-text-grey w3-hover-text-white" %>
  <% if !user_signed_in? %>
     <%= link_to "Sign in", sign_in_path, class: "w3-mobile w3-bar-item w3-button w3-hover-none w3-text-grey w3-hover-text-white" %>
  <% else %>
	 <span class="w3-mobile w3-bar-item w3-button w3-hover-none w3-text-grey w3-hover-text-white" > <%= current_user.email %> </span>
     <%= link_to "Sign out", destroy_user_session_path, method: :delete,  class: "w3-mobile w3-bar-item w3-button w3-hover-none w3-text-grey w3-hover-text-white" %>
  <% end %>
</div>